<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeleccionProvinciaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECCION PROVINCIA" />

        <RadioGroup
            android:id="@+id/rbg_provincias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_todas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Todas" />

            <RadioButton
                android:id="@+id/rb_valencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valencia" />

            <RadioButton
                android:id="@+id/rb_alicante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alicante" />

            <RadioButton
                android:id="@+id/rb_castellon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Castellon" />
        </RadioGroup>

        <Button
            android:id="@+id/bt_aceptar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACEPTAR" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>